{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "system",
  "share": "disabled",
  "plugin": [
    "opencode-openai-codex-auth@4.1.0",
    "opencode-gemini-auth"
  ],
  "agent": {
    "report_assistant": {
      "mode": "subagent",
      "prompt": "You are the assistant to the team lead of the machine learning and AI team at \"fluege.de\". Your primary job is to produce clear, concise, well-structured Markdown documents: technical reports, meeting notes, idea logs, project status updates, and assessment reports. You receive information from sources like AWS, GitHub, logs, and code. Always respond in Markdown, summarizing and organizing the available information so it is easy to understand and act on. Provide empowering, decision-ready overviews, keep track of the bigger picture of ongoing work, and avoid inventing details that are not supported by the given context."
    },
    "assistant": {
      "mode": "primary",
      "prompt": "You are a senior advisor to the team lead of the machine learning and AI team at \"fluege.de\". Your primary job is to help with decisions and daily work by providing precise, practical information and explanations based on everything available in this opencode project: code, configs, logs, documentation, and external integrations (e.g. AWS, GitHub). Maintain a mental overview of the overall system, active projects, and their status, and connect details back to this bigger picture. Answer in clear, direct natural language (not Markdown), and prefer concise paragraphs and lists written inline. When information is missing or uncertain, say so explicitly, suggest what to check, and avoid inventing unsupported facts. **Crucially, you act as the repository's scribe: whenever new information, decisions, or context arises, you MUST proactively update the corresponding files (e.g., profiles, project logs, tickets) to ensure the documentation stays current.**"
    }
  },
  "mcp": {
    "gitlab": {
      "type": "local",
      "command": ["npx", "-y", "@zereight/mcp-gitlab"],
      "environment": {
        "GITLAB_PERSONAL_ACCESS_TOKEN": "{env:GITLAB_PERSONAL_ACCESS_TOKEN}",
        "GITLAB_API_URL": "https://git.dev.invia.io/api/v4",
        "GITLAB_READ_ONLY_MODE": "true",
        "USE_PIPELINE": "true",
        "USE_MILESTONE": "true"
      },
      "enabled": false
    },
    "github": {
      "type": "remote",
      "enabled": false,
      "url": "https://api.githubcopilot.com/mcp/",
      "headers": {
        "Authorization": "Bearer <REDACTED_GITHUB_TOKEN>"
      }
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    },
    "awslabs.cloudwatch-mcp-server": {
      "type": "local",
      "enabled": false,
      "command": ["uvx", "awslabs.cloudwatch-mcp-server@latest"],
      "environment": {
        "AWS_PROFILE": "default",
        "FASTMCP_LOG_LEVEL": "ERROR"
      }
    },
    "awslabs.cost-explorer-mcp-server": {
      "type": "local",
      "enabled": false,
      "command": ["uvx", "awslabs.cost-explorer-mcp-server@latest"],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_PROFILE": "default"
      }
    },
    "awslabs.sagemaker-ai-mcp-server": {
      "type": "local",
      "enabled": false,
      "command": [
        "uvx",
        "awslabs.sagemaker-ai-mcp-server@latest",
        "--allow-sensitive-data-access"
      ],
      "environment": {
        "FASTMCP_LOG_LEVEL": "ERROR",
        "AWS_PROFILE": "default"
      }
    },
    "git": {
      "type": "local",
      "command": ["uvx", "mcp-server-git"],
      "enabled": false
    }
  },
  "provider": {
    "openai": {
      "options": {
        "reasoningEffort": "medium",
        "reasoningSummary": "auto",
        "textVerbosity": "medium",
        "include": ["reasoning.encrypted_content"],
        "store": false
      },
      "models": {
        "gpt-5.2-low": {
          "name": "GPT 5.2 Low (OAuth)",
